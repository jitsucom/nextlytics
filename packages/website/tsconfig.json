{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@nextlytics/core": ["../core/src/index.ts"],
      "@nextlytics/core/client": ["../core/src/client.tsx"],
      "@nextlytics/core/server": ["../core/src/server.tsx"],
      "@nextlytics/core/backends/*": ["../core/src/backends/*"],
      "@nextlytics/core/plugins/*": ["../core/src/plugins/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
